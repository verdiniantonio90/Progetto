<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog id="dan" title="Anagrafica" contentWidth="100%" state="Information" stretch="false" titleAlignment="Center">
        <Table id="Tb_anag"  alternateRowColors="true" items="{ANAGRAFICA>/}">
			<headerToolbar>
				<OverflowToolbar>
					<Title text="Tabella Utenti"></Title>
					<ToolbarSpacer ></ToolbarSpacer>
					<Button type="Emphasized" icon="sap-icon://add" press="onAdd"></Button>
				</OverflowToolbar>
			</headerToolbar>
            <columns>
                <Column  width="10em" hAlign="Center">
                    <Text text="Nome-Cognome-Data Di Nascita - Cod. Fiscale" />
                </Column>
				 <Column width="15em"  hAlign="Center">
                    <Text text=" Indirizzo-Cap-Telefono-Cellulare" />
                </Column>
			
				 <Column width="15em" demandPopin="true"  hAlign="Center"  minScreenWidth="XXLarge">
                    <Text text="Email-Pec-P. IVA"  />
                </Column>
				
				 <Column width="5em" demandPopin="true"    hAlign="Center" minScreenWidth="XXLarge">
                    <Text text="" />
                </Column>
            </columns>
            <items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<VBox>
								<Input value="{ANAGRAFICA>nome}" editable="false" placeholder="Nome"></Input>
								<Input value="{ANAGRAFICA>cognome}" editable="false" placeholder="Cognome"></Input>
								<DatePicker value="{ANAGRAFICA>dataNascita}" editable="false" placeholder="Data Nascita" displayFormat="dd/MM/yyyy"></DatePicker>
								<Input value="{ANAGRAFICA>cf}" maxLength="16" editable="false" placeholder="Cod. Fiscale"></Input>
							</VBox>
							<VBox>
								<Input value="{ANAGRAFICA>indirizzo}"  editable="false" placeholder="Indirizzo"></Input>
								<Input value="{ANAGRAFICA>cap}" maxLength="5"  editable="false" placeholder="Cap"></Input>
								<Input value="{ANAGRAFICA>telefono}"  editable="false" placeholder="Telefono"></Input>
								<Input value="{ANAGRAFICA>cellulare}"  editable="false" placeholder="Cellulare"></Input>
							</VBox>
							<VBox>
								<Input value="{ANAGRAFICA>email}"  editable="false" placeholder="E-Mail"></Input>
								<Input value="{ANAGRAFICA>pec}"  editable="false" placeholder="Pec"></Input>
								<Input value="{ANAGRAFICA>p_iva}" maxLength="11" editable="false"  placeholder="P.IVA"></Input>
							</VBox>
							<VBox>
								<Button press="onSalva" icon="sap-icon://save" visible="false" type="Accept"></Button>
								<Button press="onEdit" icon="sap-icon://edit" type="Accept"></Button>
								<Button press="onDelete" icon="sap-icon://delete" type="Reject"></Button>
								<Button press="onDetail" icon="sap-icon://detail-view" type="Emphasized"></Button>
							</VBox>
						</cells>
					</ColumnListItem>
			</items>
        </Table>
	

			<beginButton>
				<Button  text="chiudi" type="Reject" press="onClose($event,'Anagrafica','dan')"></Button>
			</beginButton>
			<endButton>
				<Button text="ok" type="Accept" press="onInsert($event,'dan')"></Button>
			</endButton>
	
    </Dialog>
</core:FragmentDefinition>
